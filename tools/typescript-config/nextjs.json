{
    "extends": "./base.json",
    "compilerOptions": {
        "target": "ES2017",
        "lib": [
            "DOM",
            "DOM.Iterable",
            "ES2017"
        ],
        "module": "ESNext",
        "moduleResolution": "bundler",
        "jsx": "preserve",
        "plugins": [
            {
                "name": "next"
            }
        ]
    },
    "include": [
        "next-env.d.ts",
        "**/*.ts",
        "**/*.tsx",
        ".next/types/**/*.ts"
    ]
}