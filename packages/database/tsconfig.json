{
    "extends": "../typescript-config/base.json",
    "compilerOptions": {
        "outDir": "./dist",
        "rootDir": "./src",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "composite": true,
        "incremental": true,
        "tsBuildInfoFile": "./dist/.tsbuildinfo"
    },
    "include": ["src/**/*", "src/seed.ts"],
    "exclude": ["dist", "node_modules", "**/*.test.ts", "**/*.spec.ts"]
}
